        .footer__col
          nav.menu
            ul.menu__list
              -
                var myWorks = [['my-work.html','Мои работы'], ['about.html', 'Обо мне'], ['blog.html', 'Блог'] ,['#', 'Авторизация'] ]
              each item in myWorks
                li.menu__item                
                  a(href=item[0] class="menu__item-link").menu__link #{item[1]}

            ul.socials.socials-margin
              each item in socials
                li.socials__item
                  a(href=item[1]).socials__link
                    +icon(item[0], 'social__svg-about')
