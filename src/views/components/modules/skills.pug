script(type="text/x-template")#skills-list
  ul.skills-list
    li.skills-list__item(v-for="skill in skills")
      skills-row(
        :skill="skill"
      )

script(type="text/x-template")#skills-row
  .skllls-row
    .skills-row__title {{skill.skillsGroup}}
    ul.skills
      li.skills-list__item(v-for="(skillPercents, skillName) in skill.skills")
        skill(
          :skillName="skillName"
          :skillPercents="skillPercents"
        )

script(type="text/x-template")#skill
  .skill
    svg(viewBox="0 0 122 122" width="122" height="122" preserveAspectRatio="none").b-skill-svg
      circle(cx="50%" cy="50%" r="50").b-skill-svg__circle-base
      circle(cx="50%" cy="50%" r="50" ref="color-circle").b-skill-svg__circle-progress
    .skill__title {{ skillName }} 
